<div class="container full-height">
  <div class="row full-height">
    <div class="valign-wrapper full-height">
      <div class="col s10 offset-s1 m6 offset-m3"> 
        <div class="card panel login hoverable z-depth-5 form-border">

          <h2>Sign up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="input-field">
        <%= f.text_field :name, class: "validate" %>
        <%= f.label :name, class: "active" %>
      </div>

      <div class="input-field">
        <%= f.text_field :role, placeholder: "Instrument, Vocal Part, ect.", class: "validate" %>
        <%= f.label :role, class: "active" %>
      </div>
      
      <div class="input-field">
        <%= f.telephone_field :phone, class: "validate" %>
        <%= f.label :phone, class: "active" %>
      </div>

      <div class="input-field">
        <%= f.email_field :email %>
        <%= f.label :email, class: "active" %>
      </div>

      <div class="input-field">
            <%= f.password_field :password, autocomplete: "off" %>
            <%= f.label :password, "Password: 8 Characters Minimum" %>
          </div>

          <div class="input-field">
            <%= f.password_field :password_confirmation, autocomplete: "off" %>
            <%= f.label :password_confirmation %>
          </div>

          <div class="actions">
            <%= f.submit "Sign up", class: "btn" %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>
</div>
