<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3 form-border">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>

      <div class="input-field">
        <%= f.text_field :name, class: "validate" %>
        <%= f.label :name, class: "active" %>
      </div>

      <div class="input-field">
        <%= f.text_field :role, placeholder: "Instrument, Vocal Part, ect.", class: "validate" %>
        <%= f.label :role, class: "active" %>
      </div>
      
      <div class="input-field">
        <%= f.telephone_field :phone, class: "validate" %>
        <%= f.label :phone, class: "active" %>
      </div>

      <div class="input-field">
        <%= f.label :email, class: "active" %>
        <%= f.email_field :email %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="input-field">
        <%= f.label :password, class: "active" %> 
        <%= f.password_field :password, autocomplete: "off", placeholder: "Leave blank if you don't want to change it" %>
      </div>

      <div class="input-field">
        <%= f.label :password_confirmation, class: "active" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
      
      <br>
      <br>

      <div class="input-field">
        <%= f.password_field :current_password, autocomplete: "off", placeholder: "We need your current password to confirm your changes" %>
        <%= f.label :current_password, class: "active" %> 
      </div>

      <div class="actions">
        <%= f.submit "Update", class: "btn" %>
      </div>
      <% end %>
      
      <br>

      <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn" %>
      
      <br>

      <%= link_to "Back", :back %>
    </div>
  </div>
</div>
