<%= render 'login_bg' %>
<div class="container full-height">
	<div class="row full-height">
		<div class="valign-wrapper full-height">
				<div class="col s10 offset-s1 m4 offset-m4 "> 
					<div class="card panel login hoverable z-depth-5">
						<h2>Log in</h2>

						<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
						<div class="input-field">
							<i class="material-icons prefix">email</i>
							<%= f.email_field :email, class: "validate" %>
							<%= f.label :email %>
						</div>

						<div class="input-field">
							<i class="material-icons prefix">vpn_key</i>
							<%= f.password_field :password, autocomplete: "off", class: "validate" %>
							<%= f.label :password%>
						</div>
						
						<% if devise_mapping.rememberable? -%>
						<div class="field">
							<%= f.check_box :remember_me %>
							<%= f.label :remember_me %>
						</div>
						<% end -%>
						
						<br>

						<div class="actions">
							<%= f.submit "Log in", class: "btn" %>
						</div>
						<% end %>

						<%= render "devise/shared/links" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
