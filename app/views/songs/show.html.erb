<div class="container">
	<div class="row">
		<div class="col s12 m8 offset-m2 form-border">
			<h2><%= @song.name %></h2>
			<i><%= @song.artist %></i>
			 <blockquote>
		      Key: <%= @song_arrangement.keyof %>
		      <br>
		      Length: <%= @song_arrangement.length %>
		      <br>
				<% unless @song_arrangement.bpm.nil? %>
				BPM: <%= @song_arrangement.bpm %>
				<br>
				<% end %>
		    </blockquote>
			<hr>
			<h5 class="center-text">Lyrics:</h5>
			<span class="lyrics"><%= @song_arrangement.lyrics.html_safe %></span>
			<br>
		</div>
	</div>
</div>